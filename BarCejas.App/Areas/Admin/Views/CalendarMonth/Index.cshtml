@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="single-page-header">
    <diV class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <ol class="breadcrumb header-bradcrumb">
                    <li class="btn-trans"><a href="javascript:history.back()"><i class="fas fa-solid fa-angle-left"></i></a></li>
                    <li class="spa-bag"><a asp-controller="GestorShifts" asp-action="Inderx">Gestor</a></li>
                    <li class="spa-bag">-</li>
                    <li class="active spa-bag">Gestor de profesionales</li>
                </ol>
            </div>
        </div>
    </diV>


    <div class="container  title-secon-header">
        <div class="row">
            <div class="col-md-12">
                <h4 class="title-secon">TURNOS</h4>
            </div>
        </div>
    </div>
</section>
<section class="company-mission section" style="padding-top: 2%;">
    <div class="container">
        <div class="row">
            <div class="form-group col-md-6 mb-4">
                <div class="row media justify-content-center">
                    <div class="media-right align-self-center">
                        <img class="rounded-circle" alt="80x80" src="https://ui-avatars.com/api/?name=A+S&background=fadce6&color=333&rounded=true&bold=true&size=80" data-holder-rendered="true">

                    </div>
                    <div class="media-right align-self-center col-md-10 ml-2">
                        <h5 for="inputEmail4">Nombre profesional</h5>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3 mb-4">
                <label for="inputGenero">Local</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option selected>Local 1</option>
                    <option>Local 2</option>
                    <option>Local 3</option>
                </select>
            </div>
            <div class="form-group col-md-3 mb-4">
                <label for="inputGenero">Cambiar profesional</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option selected>profesional 1</option>
                    <option>profesional 2</option>
                    <option>profesional 3</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @await Html.PartialAsync("_CalendarWie", null)
            </div>
        </div>
    </div>
</section>
@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $('#calendar').fullCalendar({
            themeSystem: 'bootstrap4',
            weekNumbers: true,
            eventLimit: true, // allow "more" link when too many events
            // events: 'https://fullcalendar.io/demo-events.json',
            events: [{ "title": "Cejas Hibridas", "start": "2021-12-01" },
            { "title": "Perfilado de cejas", "start": "2021-12-07" },
            { "title": "Perfilado de cejas", "start": "2021-12-08" },
            { "title": "Perfilado de cejas", "start": "2021-12-09" },
            { "title": "Perfilado de cejas", "start": "2021-12-19" },
            ],
            initialView: 'dayGridMonth',
            defaultView: 'month',
            lang: 'es',
            selectable: true,
        });

	
    </script>
}


