@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@model BarCejas.App.Models.ChangePasswordViewModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header CustomHeaderModal">
            <button type="button" onclick="OnCloseModalChangePassword()" class="close closeModalLogin" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="container-fluid">
                <form asp-controller="GestorCustomer" asp-action="ChangePassword" method="POST" data-ajax="true" data-ajax-method="POST" data-ajax-failure="OnFailureAddOrEdit" data-ajax-success="OnSuccessAddOrEdit">
                    <div class="row mb-4">
                        <div class="col">
                        </div>
                        <div class="col-6 enterLoginText FontText">
                            CAMBIAR CONTRASEÑA
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="hide">
                        <input type="hidden" asp-for="Id">
                    </div>
                    <div class="row">
                        <div class="col"></div>
                        <div class="col-8">
                            <div class="form-group">
                                <label style="margin-bottom: 0px;" asp-for="Password">Contraseña</label>
                                <input asp-for="Password" type="password" class="form-control rounded-0" placeholder="Ingresá la nueva contraseña">
                                <span class="field-validation-error" asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="col"></div>
                    </div>
                    <div class="row mb-4">
                        <div class="col"></div>
                        <div class="col-8">
                            <div class="form-group">
                                <label asp-for="ConfirmarPassword">Confirmar contraseña</label>
                                <input asp-for="ConfirmarPassword" type="password" class="form-control rounded-0" placeholder="Repetí la contraseña">
                                <span class="field-validation-error" asp-validation-for="ConfirmarPassword"></span>
                            </div>
                        </div>
                        <div class="col"></div>
                    </div>
                    <div class="row mb-5">
                        <div class="col"></div>
                        <div class="col-8">
                            <button type="submit"
                                    class="btn btn-lg btn-block ButtonLogin rounded-0 FontText">
                                CAMBIAR CONTRASEÑA
                            </button>
                        </div>
                        <div class="col"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>