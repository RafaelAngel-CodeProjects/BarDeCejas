@model BarCejas.Entities.OrdenesVigentes


<form asp-controller="GestorShifts" asp-action="OnChangeEstatus" data-ajax="true" data-ajax-method="POST" data-ajax-failure="onFailureTurno" data-ajax-success="OnSuccessAddOrEditTurno" data-ajax-mode="replace" data-ajax-update="#ListTurnos">
    <input asp-for="IdOrden" type="hidden" />
    <h4 class="text-center">
        ¿Deseas cancelar tu turno
        del cliente @Model.Cliente
        el @Model.FechaDeCita.ToShortDateString() a las @Model.Hora?
    </h4>
    <div class="row centrar">
        <div class="col-md-12 mb-4 centrar ">
            <a href="#" style="width: 100%;" data-dismiss="modal" class="btn btn-main">VOLVER</a>
        </div>
        <div class="col-md-12 mb-4 centrar">
            <button type="submit" class="btn btn-main-accion" style="width: 100%;">CANCELAR TURNO</button>
        </div>
    </div>
</form>