                console.log('@isLogin')

                $.post('@Url.Action("ModalRegisterLogin", "User")', { obj: JSON.parse('@Html.Raw(Json.Serialize(user))'), pLogin: '@isLogin' }, function (Data) {

                    onSuccessModalLogin(Data);
