        $('#owl-testimoniales').owlCarousel({
            loop: true,
            margin: 1,
            items: 3,
            nav: true,
            autoplaySpeed: false,
            startPosition: 1,
            autoplay: 2500,
            smartSpeed: 1500,
            dots: false,
            responsiveClass: true,
            thumbs: true,
            thumbsPrerendered: true,
            navText: [
                "<img src='@Url.Content("~/images/prev.png")' />",
                "<img src='@Url.Content("~/images/next.png")'>"],
            responsive: {
                0: {
                    items: 1,
                    margin: 0
                },
                991: {
                    items: 2,
                    margin: 5
                },
                1200: {
                    items: 3,
                    margin: 5
                }


            }
        });

        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map-canvas-contact'), {
                center: { lat: -36.0540992, lng: -62.7388904 },
                zoom: 4,
                //disableDefaultUI: false,
                mapTypeId: google.maps.MapTypeId.RoadMap
